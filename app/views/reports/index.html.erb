<div class="row"><h1>Reports</h1></div>
<br/>
<div class="row">
  <%= simple_form_for @report, method: :get, data: { 'csv-action': formatted_dossier_report_path('csv', @report), 'xls-action': formatted_dossier_report_path('xls', @report), 'default-action': dossier_report_path(@report) } do |f| %>
    <div class="row">
      <div class="col-sm-3">
        <div class="form-group">
          <%= f.input :date_from, as: :bootstrap_datepicker, class: 'form-control datepicker', input_html: { value: @date_from } %>
        </div>
      </div>
      <div class="col-sm-3">
        <div class="form-group">
          <%= f.input :date_to, as: :bootstrap_datepicker, class: 'form-control datepicker', input_html: { value: @date_to } %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <%= f.label t('report.download_as_optional'), class: 'control-label', required: false %>
          <div class="checkbox">
            <%= f.input :xls, as: :boolean, input_html: { class: 'report-download-type', data: { type: :xls } } %>
          </div>
          <div class="checkbox">
            <%= f.input :csv, as: :boolean, input_html: { class: 'report-download-type', data: { type: :csv } } %>
          </div>
        </div>
      </div>
    </div>

    <%= f.submit t('report.generate'), class: 'btn btn-primary' %>

  <% end %>
</div>



