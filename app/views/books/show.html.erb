<ol class="breadcrumb" style="margin-bottom: 5px;">
  <li class="active"><%= link_to 'Back', books_path %></li>
</ol>

<div class="panel panel-default">
  <div class="panel-body">
    <img src="<%= @book.cover.normal %>" />
    <ul class="list-unstyled">
      <li>Name:<%= @book.name %></li>
      <li>Author:<%= @book.author %></li>
      <li>SKU:<%= @book.sku %></li>
      <li>ISBN:<%= @book.isbn %></li>
    </ul>
    <% if can? :manage, @book %>
      <%= link_to 'Edit', edit_book_path(@book), class: 'btn btn-warning' %>
    <% end %>
  </div>
</div>

<h3>Active Rental</h3>
<%= render partial: 'rental_table', locals: { active: true, rentals: @book.rentals.active } %>

<h3>Past rentals</h3>
<%= render partial: 'rental_table', locals: { rentals: @book.rentals.returned } %>