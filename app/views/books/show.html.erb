<ol class="breadcrumb" style="margin-bottom: 5px;">
  <li class="active"><%= link_to t('application.back'), books_path %></li>
</ol>

<div class="col-sm-12" id="book-<%= @book.id %>">
  <div class="panel panel-default">
    <div class="panel-body">
      <div class="media">
        <div class="media-left">
          <%= link_to image_tag(@book.cover.big, class: 'media-object'), @book %>
        </div>
        <div class="media-body">
          <div class="">
            <div class="book-item"><h4 class="media-heading"><%= link_to @book.name, @book %></h4></div>
            <div class="book-item"><h6><%= t('book.by') %> <%= @book.author %></h6></div>
            <div class="book-item"><%= t('book.isbn') %>: <%= @book.isbn %></div>
            <div class="book-item"><%= t('book.sku') %>: <%= @book.sku %></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<h3><%= t('rental.active') %></h3>
<%= render partial: 'rental_table', locals: { active: true, rentals: @book.rentals.active } %>

<h3><%= t('rental.past') %></h3>
<%= render partial: 'rental_table', locals: { rentals: @book.rentals.returned } %>